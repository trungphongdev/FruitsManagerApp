<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_in_layout"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textview_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="#7431EC"
            android:fontFamily="@font/lobster"
            android:text="Sign Up"
            android:textSize="45sp"
            android:textStyle="bold" />

        <EditText
        android:id="@+id/edtId_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lobster"
        android:hint="Id"
        android:visibility="invisible"
        tools:visibility="visible"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/edtName_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lobster"
        android:hint="Name"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtAge_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lobster"
        android:textSize="24sp"/>
    <EditText
        android:id="@+id/edtEmail_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lobster"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/edtPhone_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lobster"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtPassword_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lobster"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:background="@drawable/designbutton"
        />

        <Button
            android:id="@+id/buttonChangeInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/designbutton"
            android:text="Change"
            android:visibility="invisible"
            android:textColor="@android:color/white" />
    </LinearLayout>


</ScrollView>